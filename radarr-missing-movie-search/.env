# .env file: Configuration for Radarr instances and script settings

# Radarr Instance 1
RADARR_URL_1=http://localhost:7878        # Replace with the actual URL for Radarr instance 1
RADARR_API_KEY_1=your_api_key_here        # Replace with the actual API key for instance 1

# Radarr Instance 2
RADARR_URL_2=http://localhost:7879        # Replace with the actual URL for Radarr instance 2
RADARR_API_KEY_2=your_api_key_here        # Replace with the actual API key for instance 2

# Add more instances as needed using the same pattern, e.g.:
# RADARR_URL_3=http://localhost:7880
# RADARR_API_KEY_3=your_api_key_here

# Other customizable script settings
SEARCH_INTERVAL=600                       # Time in seconds between each search cycle (Default: 600 seconds / 10 minutes)
BATCH_SIZE=8                              # Number of movie IDs to process in each search batch (Default: 8)
MAX_RETRIES=5                             # Maximum retries on errors before clearing searched IDs (Default: 5)
CLEAR_SEARCHED_IDS_INTERVAL=86400         # Time in seconds to clear searched IDs (Default: 24 hours / 86400 seconds)